<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RoomDescriptionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        tools:ignore="UselessParent">
        
        <ImageView
            android:id="@+id/singleImage"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/white"
            android:src="@drawable/imageloading"/>

        <TextView
            android:id="@+id/singleHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/grey"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/original_surfer"
            android:text="Room Owner Name"
            android:textColor="#1962A2"
            android:textSize="26sp"
            android:textStyle="bold" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="monospace"
                android:text="Rent-â‚¹ "
                android:textColor="#29292B"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/singlePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#585560"
                android:layout_marginStart="8dp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:drawableEnd="@drawable/baseline_location_on_24"
                android:textSize="22sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:background="@color/black"
                android:textColor="#ffffff"

                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/singleLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shahpur"
                android:textSize="18sp"

                android:textColor="#585560"
                android:layout_marginStart="10dp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avaliable For"
                android:textSize="22sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="#29292B"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/singleAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="boys"
                android:textSize="18sp"

                android:textColor="#585560"
                android:layout_marginStart="10dp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attached Bathroom"
                android:textSize="22sp"

                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:background="@color/black"
                android:textColor="#ffffff"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/singleAttached"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="18sp"

                android:textColor="#585560"
                android:layout_marginStart="10dp"/>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact No."
                android:textSize="22sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="#29292B"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/singleContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9817134567"
                android:textSize="22sp"
                android:textColor="#585560"
                android:layout_marginStart="10dp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sharing"
                android:textSize="22sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:background="@color/black"
                android:textColor="#ffffff"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/singleSharing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private Room"
                android:textSize="18sp"

                android:textColor="#585560"
                android:layout_marginStart="10dp"/>





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >
<Button
    android:id="@+id/booknow"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="Book Now"
    android:layout_gravity="center"
    android:textColor="@color/white"
    android:backgroundTint="#FF6E40"/>
