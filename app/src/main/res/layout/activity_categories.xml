<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Categories">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/baseline_arrow_back_24" />

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/back"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"

                android:padding="15dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"

            android:padding="10dp"
            android:textColor="@color/black"
            android:text="@string/categories"
            android:textAllCaps="true"
            android:textSize="30sp" />

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"

            android:id="@+id/girlsOption"
            cardBackgroundColor="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#3B5492">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#3B5492">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alegreya_sc"

                        android:padding="25dp"
                        android:text="@string/for_girls"
                        android:textColor="@color/white"
                        android:textSize="30sp" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="22dp"
                    android:src="@drawable/girlcat2" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            cardBackgroundColor="#00000000"
            android:id="@+id/boysOption"
            android:layout_width="match_parent"
            app:cardCornerRadius="14dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardElevation="8dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:background="#1888CB">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/boycat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/alegreya_sc"
                    android:paddingTop="40dp"
                    android:paddingRight="20dp"
                    android:text="For boys"
                    android:textColor="@color/white"
                    android:textSize="30sp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            cardBackgroundColor="#00000000"
            android:layout_width="match_parent"
            android:id="@+id/combinedOption"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:layout_margin="20dp"
            app:cardElevation="8dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#775BCB">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/alegreya_sc"
                        android:paddingTop="20dp"
                        android:paddingEnd="10dp"
                        android:text="Combined"
                        android:textColor="@color/white"
                        android:textSize="30sp" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/combinedcat" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

